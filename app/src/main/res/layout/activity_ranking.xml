<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/LightToolbar"
        android:elevation="2dp" />

    <com.zjk.common.ui.refresh.MaterialRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/mrl_list_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_ranking"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.zjk.common.ui.refresh.MaterialRefreshLayout>

</LinearLayout>
